div.gallery
    & > h1
        margin: 2rem

    & > div.sub_page
        justify-content: center
        align-items: center
        align-content: center

        & > a
            font-size: 80px
            padding: 1rem
            text-decoration: none
            opacity: 0.5
            transition: all .2s ease-in-out

            &:visited
                color: black

            &:hover
                opacity: 1
                transform: scale(1.2)

        & > div.current
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center

            width: 1100px
            background: #333
            box-shadow: 3px 3px 3px 4px rgba(0, 0, 0, 0.4)

            & > div.description
                display: flex
                flex-direction: column
                align-items: center
                text-align: center
                width: 100%
                color: white
                padding: 1rem
                & > p.title
                    font-weight: 900
                    font-size: 1.2em
                & > p.details
                    width: 900px
                    font-weight: 100
                    word-wrap: break-word

            & > div.img
                margin-top: 20px
                display: flex
                flex: 0 0 auto
                & > div.inner
                    flex: 1 1
                    background-size: contain
                    background-repeat: no-repeat
