body.cv
    background: #f8f8f8

div.cv
    font-size: 18px
    line-height: 24px
    width: 780px
    margin: auto
    margin-bottom: 2rem

    &[lang=ru] *[lang]:not(:lang(ru))
        display: none

    &[lang=en] *[lang]:not(:lang(en))
        display: none

    & > div.lang_switcher
        margin-top: 0
        float: right
        & > a > img
            height: 32px
            width: 32px
            margin-right: 0.5em

    & > h1
        margin-top: 1rem
        font-family: 'Fira Sans', "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 2rem
        padding-bottom: 1rem
        border-bottom: 1px solid #000

    & > div.common
        margin-top: 1em
        & > *
            vertical-align: top
            display: inline-block
        & > p
            color: #666
            width: 300px
            font-style: italic
        & > table
            & > * td
                padding-right: 0.4em

    & > * img.logo
        width: 30px
        height: 30px
        margin-right: 5px
        &:hover
            opacity: 0.4

    & > div
        margin-top: 1rem
        margin-left: auto
        margin-right: auto

    & > section
        margin-top: 1rem
        margin-left: auto
        margin-right: auto
        & > *
            vertical-align: top
            display: inline-block
        & > * ul
            padding: 0
            list-style-type: none
        & > h2
            font-size: 20px
            width: 20%
            font-style: italic
            word-wrap: break-word
        & > div
            width: 75%
            padding-left: 0.8em
            border-left: 1px solid #000
        & > * span
            font-style: italic
            color: #999

    @media print
        .logo
        div.lang_switcher
            display: none
        .spoiler
            display: inline-block !important
        .link_logo
            font-size: 14px
            text-decoration: none
        .link_logo::after
            content:  attr(title)
            margin-right: 0.5em
            text-decoration: none
            color: black

